// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserType {
  USER
  AGENT
  ADMIN
}

model User {
  id       String   @id @default(cuid())
  name     String?
  email    String   @unique
  password String
  type     UserType

  userProfile  Profile?
  agentProfile Agent?
}

model Profile {
  userId     String    @id
  User       User      @relation(fields: [userId], references: [id])
  LikedHomes Home[]
  showings   Showing[]
}

model Agent {
  id       String    @id @default(cuid())
  name     String
  phone    String
  email    String    @unique
  agency   Agency    @relation(fields: [agencyId], references: [id])
  agencyId String
  homes    Home[]
  user     User      @relation(fields: [userId], references: [id])
  userId   String
  showings  Showing[]
}

model Agency {
  id      String  @id @default(cuid())
  name    String  @unique
  phone   String  @unique
  address String  @unique
  agents  Agent[]
}

model School {
  name  String @id
  type  String
  homes Home[]
}

model Room {
  id          String @id @default(cuid())
  name        String
  description String
  home        Home   @relation(fields: [homeMlsn], references: [mlsn])
  homeMlsn    String
}

model Home {
  mlsn        String    @id
  agent       Agent     @relation(fields: [agentId], references: [id])
  agentId     String
  price       Int
  sqfootage   Int
  street      String
  city        String
  state       String
  zipcode     Int
  subdivision String?
  schools     School[]
  dailyHits   Int       @default(0)
  alarmInfo   String
  description String
  rooms       Room[]
  liked       Profile[]
  showings    Showing[]
}

model Showing {
  date     DateTime
  user     Profile  @relation(fields: [userId], references: [userId])
  userId   String
  agent    Agent    @relation(fields: [agentId], references: [id])
  agentId  String
  home     Home     @relation(fields: [homeMlsn], references: [mlsn])
  homeMlsn String

  @@unique([date, userId, homeMlsn])
}
