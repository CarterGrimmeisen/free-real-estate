datasource db {
  provider = "postgres"
  url      = "postgresql://freerealestate:its_free_real_estate@localhost:5432/freerealestate"
}

generator client {
  provider = "prisma-client-js"
}

enum UserType {
  USER
  AGENT
  ADMIN
}

model User {
  id        Int     @default(autoincrement()) @id
  name      String?
  email     String  @unique
  password  String
  type      UserType
}

model Agency {
  id        Int      @default(autoincrement()) @id
  name      String
  phone     String
  address   String
}

model Agent {
  id        Int      @default(autoincrement()) @id
  name      String
  phone     String
  email     String
  agency    Agency @relation(fields: [agencyId], references: [id])
  agencyId  Int
  listing   Home[] @relation("ListAgent")
  showing   Home[] @relation("ShowAgent")
}

model Room {
  id          Int     @default(autoincrement()) @id
  name        String
  description String
  Home        Home @relation()
}

model Home {
  id          Int     @default(autoincrement()) @id
  listAgent   Agent   @relation("ListAgent", fields: [listAgentId], references: [id])
  listAgentId Int
  showAgent   Agent   @relation("ShowAgent", fields: [showAgentId], references: [id])
  showAgentId Int
  price       Int
  sqfootage   Int
  street      String
  city        String
  state       String
  zipcode     Int
  subdivision String?
  schools     String?
  dailyHits   Int
  alarmInfo   String
  description String
  rooms       Room[]  @relation()
}